                <div class="item">
                   <img src="~/Content/imagenes/shirt2.jpg" alt="Chicago" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Content/imagenes/shirt3.jpg" alt="Chicago" style="width:100%;">

                <div class="item">
                    <img src="~/Content/imagenes/shirt7.jpg" alt="Chicago" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Content/imagenes/shirt8.jpg" alt="Chicago" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Content/imagenes/shirt1.jpg" alt="Chicago" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Content/imagenes/shirt10.jpg" alt="Chicago" style="width:100%;">
                </div>


            </div>
